# ======================================
# The Dispatch - Environment Variables
# ======================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# JWT Configuration
# Generate a secure key using: openssl rand -base64 64
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_using_openssl

# Database Configuration (Optional - defaults in docker-compose.yml)
# POSTGRES_DB=blog
# POSTGRES_USER=blog
# POSTGRES_PASSWORD=secure_password_here

# Security Configuration
# Set to "true" in production with HTTPS
COOKIE_SECURE=false

# Same-site cookie policy (Strict, Lax, None)
COOKIE_SAME_SITE=Lax

# Logging Levels (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_APP=INFO

# Development Settings
SHOW_SQL=true
FORMAT_SQL=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4200
